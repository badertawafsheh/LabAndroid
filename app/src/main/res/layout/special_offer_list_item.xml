<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_frame"
    android:orientation="horizontal"
    android:outlineAmbientShadowColor="@color/white">



    <TextView
        android:id="@+id/special_offers_text"
        android:layout_width="336dp"
        android:layout_height="225dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="year: 2016\n
make: KIA\n
model: SORENTO \n
distance: 35534 mile\n
price: 65000\n
accidents: false\n
Offers : True
"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/fav_button_menuO"
        android:layout_width="88dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="314dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/add_30px" />

    <ImageButton
        android:id="@+id/reserve_button_menuO"
        android:layout_width="54dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_baseline_add_shopping_cart_24" />


</RelativeLayout>